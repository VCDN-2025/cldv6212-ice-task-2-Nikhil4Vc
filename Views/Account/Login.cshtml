@model CharityIce2.Models.LoginModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-sm p-4" style="width: 400px;">
        <h3 class="card-title text-center mb-3">Login</h3>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                Please check your email and password.
            </div>
        }

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>

            <div class="mt-3 text-center">
                <span>Don't have an account? <a asp-action="Register" asp-controller="Account">Register here</a></span>
            </div>
        </form>
    </div>
</div>
